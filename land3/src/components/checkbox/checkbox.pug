mixin checkbox(name, text, ch, disabled)
    //- Принимает:
    //- name {string} - имя чекбокса
    //- text {string} - текст чекбокса
    //- ch {boolean} - состояние чекбокса(checked)
    //- disabled {boolean} - disabled ли чекбокс
    //- Вызов:
        +checkbox('agree', 'Запомнить меня')
        +checkbox('agree', 'Запомнить меня', true)
        +checkbox('agree', 'Запомнить меня', false, true)
    .i-checkbox&attributes(attributes)
        label.i-checkbox__label
            input(type="checkbox" name=name checked=ch disabled=disabled hidden)
            span(tabindex='0').i-checkbox__custom
                <svg width="27" height="27" viewBox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.625 15.75L10.125 19.125L20.25 6.75" stroke="white" stroke-width="3"/>
                </svg>
            span.i-checkbox__text!=text
            block

//- checkbox с не кликабельным текстом(за пределом label)
mixin checkboxOut(name, text, ch, disabled)
    //- Принимает:
    //- name {string} - имя чекбокса
    //- text {string} - текст чекбокса
    //- ch {boolean} - состояние чекбокса(checked)
    //- disabled {boolean} - disabled ли чекбокс
    //- Вызов:
        +checkboxOut('agree', 'Запомнить меня')
    .i-checkbox.i-checkbox--out&attributes(attributes)
        label.i-checkbox__label
            input(type="checkbox" name=name checked=ch disabled=disabled hidden)
            span(tabindex='0').i-checkbox__custom
        span!=text
        block